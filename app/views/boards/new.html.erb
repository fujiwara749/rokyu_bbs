<%= render 'header/head1' %>

<div class="container">
	<div class="col-md-7">
		<div class="box1">
			<div>
				<h2>スレッド新規投稿</h2>
				<%= form_for @board,url: boards_path, html: { id: "validate_id" } do |f| %>
					<%= f.collection_select(:category_id, Category.all, :id, :category_name) %>
					<%= f.text_field :thread_title, class: "validate[required]" %>
					<%= f.submit '投稿' %>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-5">
		<div>
			<h3>カテゴリ一覧</h3>
			<% @categories.each do |c| %>
				<%= link_to category_path(c) do %>
				<%= c.category_name %><br>
				<% end %>
			<% end %>
		</div>
	</div>
</div>